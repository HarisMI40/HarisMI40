---
import { Image } from 'astro:assets'
import GitHubActivityCalendar from '~/components/GitHubActivityCalendar.astro'
import type { FrontmatterImage } from '~/types'

interface Props {
  avatarImage?: FrontmatterImage
  githubCalendar?: string
}
const { avatarImage, githubCalendar } = Astro.props
---

<div class="my-6 md:mx-2">
  <div
    class="flex flex-col sm:flex-row items-center justify-around sm:gap-5 max-w-full mb-6"
  >
    {
      avatarImage && (
        <Image
          priority
          src={avatarImage.src}
          alt={avatarImage.alt}
          class="rounded-full border-8 border-accent/15 size-44 aspect-square"
          height={400}
          width={400}
        />
      )
    }
    <div>
      <div class:list={['m-4 max-w-full']}>
        <div class="ml-2">
          <h1 class="text-accent text-3xl font-bold"># Hi I'm <span class="ml-1 bg-accent text-background px-2">Haris Maulana</span> </h1>
          <h2 class="mt-3 text-sm text-accent/65">Educator & Full Stack Developer</h2>
        </div>
        <div class:list={['prose']}>
        <slot />
      </div>
      </div>
    </div>
  </div>
  {githubCalendar && <GitHubActivityCalendar username={githubCalendar} />}
</div>
